<?xml version='1.0' encoding='utf-8'?>
<widget id="io.aj.weatherapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Weather</name>
    <description>
        An app to get the weather of your town.
    </description>
    <author email="rat.bourdon@gmail.com">
        A J
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <engine name="android" spec="^7.1.4" />
</widget>
